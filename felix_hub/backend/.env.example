# Environment
# Options: production, staging, development
# Feature flags default to OFF in production, ON in staging/dev
ENVIRONMENT=staging

# Flask
FLASK_SECRET_KEY=your-secret-key-here
SECRET_KEY=your-secret-key-here
DATABASE_URL=sqlite:///felix_hub.db

# Telegram Bot
BOT_TOKEN=your-telegram-bot-token
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
ADMIN_CHAT_IDS=123456789,987654321

# Feature Flags
# Enable car number field in order forms
ENABLE_CAR_NUMBER=true
ALLOW_ANY_CAR_NUMBER=false

# Enable categorized parts catalog view
ENABLE_PART_CATEGORIES=true

# Enable Telegram notifications
ENABLE_TG_ADMIN_NOTIFS=true
ENABLE_TG_MECH_NOTIFS=true

# Enable multi-language support in mechanic interface
ENABLE_MECH_I18N=true

# Enable modernized UI components
ENABLE_UI_REFRESH=true

# Frontend URL (for notification links)
FRONTEND_URL=http://localhost:3000

# Printer (ESC/POS)
PRINTER_ENABLED=false
PRINTER_IP=192.168.0.50
PRINTER_PORT=9100
RECEIPT_WIDTH=32

# Backend URL (для бота)
BACKEND_URL=http://localhost:5000
