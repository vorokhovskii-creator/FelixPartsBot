# Backend API URL
VITE_API_URL=http://localhost:5000/api

# Feature Flags
# These can be overridden at build time
# Default: OFF in production, ON in staging/development

# Enable car number field in order forms
VITE_ENABLE_CAR_NUMBER=true

# Enable categorized parts catalog view
VITE_ENABLE_PART_CATEGORIES=true

# Enable Telegram admin notifications
VITE_ENABLE_TG_ADMIN_NOTIFS=true

# Enable Telegram mechanic notifications
VITE_ENABLE_TG_MECH_NOTIFS=true

# Enable multi-language support in mechanic interface
VITE_ENABLE_MECH_I18N=true

# Enable modernized UI components and styling
VITE_ENABLE_UI_REFRESH=true
