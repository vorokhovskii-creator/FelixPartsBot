# Environment
# Options: production, staging, development
# Default: production
# Feature flags default to OFF in production, ON in staging/development
ENVIRONMENT=staging

# Telegram Bot
TELEGRAM_TOKEN=your_bot_token_here
TELEGRAM_BOT_TOKEN=your_bot_token_here
ADMIN_IDS=123456789,987654321
ADMIN_CHAT_IDS=123456789,987654321

# Backend
BACKEND_URL=https://felix-hub-backend.onrender.com
WEBHOOK_URL=https://felix-hub-backend.onrender.com
FLASK_ENV=production
SECRET_KEY=your_secret_key_here

# Feature Flags
# Enable car number field in order forms (Default: ON in staging/dev, OFF in production)
ENABLE_CAR_NUMBER=true

# Allow any car number format without validation (Default: OFF)
ALLOW_ANY_CAR_NUMBER=false

# Enable categorized parts catalog view (Default: ON in staging/dev, OFF in production)
ENABLE_PART_CATEGORIES=true

# Enable Telegram admin notifications (Default: ON in staging/dev, OFF in production)
ENABLE_TG_ADMIN_NOTIFS=true

# Enable Telegram mechanic notifications (Default: ON in staging/dev, OFF in production)
ENABLE_TG_MECH_NOTIFS=true

# Enable multi-language support in mechanic interface (Default: ON in staging/dev, OFF in production)
ENABLE_MECH_I18N=true

# Enable modernized UI components and styling (Default: ON in staging/dev, OFF in production)
ENABLE_UI_REFRESH=true

# Frontend
FRONTEND_URL=https://felix-hub-frontend.example.com

# Database
DATABASE_URL=postgresql://user:pass@host:5432/dbname

# CORS Configuration (optional)
ALLOWED_ORIGINS=*

# Port (Render sets this automatically)
PORT=5000
